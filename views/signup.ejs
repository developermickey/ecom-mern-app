<%- include('partials/header') -%>
<section class="contact p-5">
    <div class="container-fluid">
        <h1 class="text-dark text-uppercase mb-4 text-center">E-Commerce Website</h1>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-5 col-sm-6 pb-4 bg-dark boxx text-light">
                <form action="">
                    <div class="row mt-3">
                        <div class="col-md-6 py-2">
                            <label for="FirstName" class="label">First Name</label>
                            <input type="text" class="form-control my-2 p-2 input" name="fname"> 
                        </div>
                        <div class="col-md-6 py-2">
                            <label for="LastName" class="label">Last Name</label>
                            <input type="text" class="form-control my-2 p-2 input" name="lname"> 
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group py-2">
                            <label for="email" class="label">Email Address</label>
                            <input type="email" class="form-control my-2 m-2 input" name="username">
                        </div>
                        <div class="form-group py-2">
                            <label for="password" class="label">Password</label>
                            <input type="password" class="form-control my-2 m-2 input" name="password">
                        </div>
                    </div>
                    <div class="d-grid gap-2 py-2">
                        <button type="submit" class="btn btn-danger p-2 fw-bold text-uppercase submit-button text-light">SIGN UP</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>

</section>
<%- include('partials/footer') -%>