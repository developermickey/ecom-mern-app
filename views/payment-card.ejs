<%- include('partials/header') -%>

<div class="container-fluid">
    <div class="row py-3">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="row py-3">
                <div class="progress bg-secondary mb-3">
                    <div class="proress-bar bg-warning" style="width: 25%;"></div>
                </div>
            </div>
            <div class="row pb-5">
                <div class="col-3">Sign In</div>
                <div class="col-3">Shipping</div>
                <div class="col-3">Payment</div>
                <div class="col-3">Place Order</div>
            </div>
            <div class="row text-center py-5 text-light">
                <div class="col-1"></div>
                <div class="col-10 bg-dark text-start" style="height: 28rem;">
                    <form action="">
                        <div class="form-group">
                            <label for="" class="py-3">Full Address:</label>
                            <input type="text" class="form-control" name="address" placeholder="Village, Street, and Building">
                        </div>
                        <div class="form-group">
                            <label for="" class="py-3">City:</label>
                            <input type="text" class="form-control" name="address" placeholder="Enter Your City">
                        </div>
                        <div class="form-group">
                            <label for="" class="py-3">Phone Number:</label>
                            <input type="text" class="form-control" name="address" placeholder="Enter Your City">
                        </div>
                        <div class="text-center py-3">
                            <button type="submit" class="btn btn-primary text-center">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br><br><br><br><br><br><br><br><br><br><br><br><br><br>
<div class="container-fluid">
    <div class="row py-3">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="row py-3">
                <div class="progress bg-secondary mb-3">
                    <div class="proress-bar bg-warning" style="width: 50%;"></div>
                </div>
            </div>
            <div class="row pb-5">
                <div class="col-3">Sign In</div>
                <div class="col-3">Shipping</div>
                <div class="col-3">Payment</div>
                <div class="col-3">Place Order</div>
            </div>
            <div class="row text-center py-5 text-light">
                <div class="col-1"></div>
                <div class="text-center">
                    <form action="">
                        <div class="card text-white text-center bg-dark mb-3" style="margin: 0; float: none; max-width: 18rem; margin-bottom: 10px;">
                        <div class="card-header">Payment</div>
                        <div class="card-body">
                            <div class="form-check-text-start py-3">
                                <input type="checkbox" onclick="return termsChanged(this)"; class="form-check-control" id="exmapleCheck" name="">
                                <label for="exmapleCheck" class="form-check-label">Cash on Delivery</label>
                            </div>
                            <div>   
                                <button type="submit" id="next" class="btn btn-warning">NEXT</button>
                            </div>
                        </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    function termsChanged(checkbox) {
        if(checkbox.checked) {
            document.getElementById("next").disabled= false;
        }else {
            document.getElementById("next").disabled = true;
        }

    }
</script>

